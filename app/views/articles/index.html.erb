<h1>Listing articles</h1>

<table>
	<tr>
	   <th>Title</th>
           <th>Text</th>
      
        </tr>

	<%@articles.each do |article| %>
         <tr>
              <td><%=article.title %></br>
              <%=link_to 'show', article_path(article)%></td>
              <td><%=article.text  %></br>
              <%=link_to 'edit', edit_article_path(article)%>    
              <%=link_to 'delete', article_path(article), method: :delete, data:{confirm: "Are You sure?"}%></td>
         </tr>
	<%end%>
</table>
